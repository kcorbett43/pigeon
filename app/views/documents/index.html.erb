<div style="min-height: 100vh; width: 100%; padding-top: 20px;">
  <%= link_to 'Export CSV', documents_download_path(format: :csv)  %>   
  <%= form_for Document.new, html: { style: "width: 100%; text-align: center;" } do |f| %>

    <div style="padding: 5px;">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div style="padding: 5px;">
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>

    <div style="padding: 5px;">
      <%= f.submit %>
    </div>

  <% end %>

  <div style="width: 100%;">
    <% @documents.each do |document| %>
      <div style="width: 100%;">
        <%= document.title %>: <%= document.author %>
      </div>
    <%end%>
  </div>

</div>